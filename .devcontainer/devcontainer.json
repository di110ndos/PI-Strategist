{
  "name": "PI Strategist — React + FastAPI",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "20" }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "frontend/src/App.tsx"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "updateContentCommand": "pip3 install --user -r backend/requirements.txt && cd frontend && npm install && echo '✅ Dependencies installed'",
  "postAttachCommand": {
    "backend": "cd backend && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload",
    "frontend": "cd frontend && npm run dev"
  },
  "portsAttributes": {
    "8000": {
      "label": "FastAPI Backend",
      "onAutoForward": "silent"
    },
    "3001": {
      "label": "React Frontend",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8000, 3001]
}
